general {
	output_format  = "i3bar"
	colors         = true
	color_good     = '#01ff00'
	color_degraded = '#07f202'  
	color_bad      = '#ff3030'
	interval       = 1
	markup         = "pango"
}

order += "disk /"
order += "run_watch DHCP"
order += "run_watch VPN"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery 1"
order += "cpu_temperature 0"
order += "load"
order += "volume master"
order += "tztime local"

disk "/" {
	format = "<span font_weight='light'>ğŸ–´</span> %avail/%total"
}

run_watch DHCP {
	pidfile = "/var/run/dhclient*.pid"
	format = "%title: <span font_weight='light'>âœ“</span>"
	format_down = "%title: <span font_weight='light'>âœ—</span>"
}

run_watch VPN {
	pidfile = "/var/run/openvpn-*.pid"
	format = "%title: <span font_weight='light'>âœ“</span> %vpn_ok%"
	format_down = "%title: <span font_weight='light'>âœ—</span> %vpn_nok%"
}

wireless _first_ {
	format_up = "<span font_weight='light'>âœ“</span> (%quality at %essid) %ip"
	format_down = "<span font_weight='light'>âœ—</span> down"
}

ethernet _first_ {
	# if you use %speed, i3status requires root privileges
	format_up = "E: %ip (%speed)"
	format_down = ""
}

