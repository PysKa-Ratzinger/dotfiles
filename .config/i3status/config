	format = "%status %remaining (%consumption)"
	status_chr = "âš¡ CHR"
	status_bat = "ğŸ”‹ BAT"
	status_unk = "? UNK"
	status_full = "â˜» FULL"
	hide_seconds = "true"
	integer_battery_capacity = "true"
	low_threshold = "20"
	threshold_type = "time"
}

